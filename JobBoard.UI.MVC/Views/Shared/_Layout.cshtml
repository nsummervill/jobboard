                                <li class="effect-3">@Html.ActionLink("Locations", "Index", "Locations")</li>

                                @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
                                {
                                    /**/
                                    <li class="effect-3">@Html.ActionLink("Applications", "Index", "Applications")</li>

                                }
                                @if (User.IsInRole("Employee"))
                                {
                                    /**/
                                    <li class="effect-3">@Html.ActionLink("My Applications", "Index", "Applications")</li>

                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="effect-3">@Html.ActionLink("Users", "Index", "UsersAdmin")</li>
                                    <li class="effect-3">@Html.ActionLink("Roles", "Index", "RolesAdmin")</li>
                                }

                                @Html.Partial("_LoginPartial")
                            </ul>

                        </nav>
                    </div>

                </div>
            </nav>
        </div>
    </div>
    @RenderBody()

