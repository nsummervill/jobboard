@model IEnumerable<JobBoard.Data.EF.Location>

@{
    ViewBag.Title = "Locations";
}

<h2 style="margin-bottom:1em; margin-top:1em; text-align:center">Dunder Mifflin Locations</h2>

<p>
    @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New Location", "Create")
    }
</p>
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StoreNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            Manager
        </th>
        <th></th>
    </tr>



    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoreNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.FirstName) @Html.DisplayFor(modelItem => item.AspNetUser.LastName)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.LocationID }, new { @class = "btn btn-default" }) @:|
                    @Html.ActionLink("Delete", "Delete", new { id = item.LocationID }, new { @class = "btn btn-default" })
                }

            </td>
        </tr>
    }


</table>
