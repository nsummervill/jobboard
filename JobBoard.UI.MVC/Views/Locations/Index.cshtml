@model IEnumerable<JobBoard.Data.EF.Location>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StoreNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
           Manager
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.AspNetUser.LastName)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoreNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.FirstName) @Html.DisplayFor(modelItem => item.AspNetUser.LastName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.AspNetUser.LastName)
            </td>*@
            <td>
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.LocationID }) @:|
                    @Html.ActionLink("Delete", "Delete", new { id = item.LocationID })
                }

                @Html.ActionLink("Details", "Details", new { id = item.LocationID }) |

            </td>
        </tr>
    }

</table>
