@model IEnumerable<JobBoard.Data.EF.Location>

@{
    ViewBag.Title = "Locations";
}

<h2 style="margin-bottom:1em; margin-top:1em; text-align:center">Dunder Mifflin Locations</h2>

<p>
    @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New Location", "Create")
    }
</p>
<table class="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoreNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                Manager
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.AspNetUser.LastName)
                </th>*@
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoreNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.FirstName) @Html.DisplayFor(modelItem => item.AspNetUser.LastName)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.AspNetUser.LastName)
                </td>*@
            <td>
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.LocationID }, new { @class = "btn btn-default" }) @:|
                    @Html.ActionLink("Delete", "Delete", new { id = item.LocationID }, new { @class = "btn btn-default" })
                }

            </td>
        </tr>
    }
</tbody>

</table>
@section Script{
    <script type="text/javascript" src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.myTable').DataTable();
        });
    </script>
}